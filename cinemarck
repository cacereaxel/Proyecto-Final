CREATE TABLE "usuarios" (
	"ID"	INTEGER UNIQUE,
	"NOMBRE"	TEXT NOT NULL,
	"EDAD"	NUMERIC NOT NULL,
	"GMAIL"	TEXT,
	PRIMARY KEY("ID" AUTOINCREMENT)
);

CREATE TABLE "SALA_2D" (
	"BUTACAS"	INTEGER DEFAULT 20,
	"OCUPADOS"	INTEGER NOT NULL,
	"DESOCUPADOS"	INTEGER NOT NULL,
	PRIMARY KEY("BUTACAS" AUTOINCREMENT)

);CREATE TABLE "SALA_3D" (
	"BUTACAS"	INTEGER DEFAULT 15,
	"OCUPADOS"	INTEGER NOT NULL,
	"DESOCUPADOS"	INTEGER NOT NULL,
	PRIMARY KEY("BUTACAS" AUTOINCREMENT)